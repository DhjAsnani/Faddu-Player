<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:id="@+id/song_item_relativeview">

    <ImageView
        android:id="@+id/imageView_song_art"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/abcd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView_song_name"
        android:textSize="22dp"
        android:textStyle="italic"
        android:layout_margin="5dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView_song_art"
        android:layout_toEndOf="@+id/imageView_song_art" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView_song_album"
        android:layout_marginLeft="5dp"
        android:textSize="22dp"
        android:layout_below="@+id/textView_song_name"
        android:layout_toRightOf="@+id/imageView_song_art"
        android:layout_toEndOf="@+id/imageView_song_art" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView_song_duration"
        android:textSize="18dp"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/imageView_song_art"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>